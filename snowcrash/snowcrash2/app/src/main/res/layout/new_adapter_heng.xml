<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="5dp"
    android:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardCornerRadius="4dp"
        android:elevation="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/index_horizontal_list_image"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="10dp"
                android:layout_width="160dp"
                android:layout_height="110dp" />
            <TextView
                android:id="@+id/index_horizontal_list_title"
                android:gravity="left|top"
                android:layout_marginRight="20dp"
                android:layout_below="@id/index_horizontal_list_image"
                android:layout_alignLeft="@id/index_horizontal_list_image"
                android:textSize="18sp"
                android:maxEms="25"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/index_horizontal_list_desc"
                android:gravity="left|top"
                android:layout_below="@id/index_horizontal_list_title"
                android:layout_marginRight="20dp"
                android:maxEms="15"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_alignLeft="@id/index_horizontal_list_title"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>