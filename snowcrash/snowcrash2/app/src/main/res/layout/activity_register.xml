<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ca45">
    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="#ff6347"
            android:text="SnowCrash"
            android:color="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="2dp"
            android:id="@+id/tv_cho"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/phone" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_marginLeft="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#FFFF00"
            android:inputType="phone"/>
        <Button
            android:id="@+id/btn_getVerificationCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="#fff"
            android:text="获取验证码"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/yan"
            />
        <EditText
            android:id="@+id/et_code"
            android:layout_marginLeft="10dp"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFF00"
            android:textStyle="bold"
            android:textSize="25sp"
            android:inputType="phone"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/name"
            />
        <EditText
            android:id="@+id/et_anotherName"
            android:layout_marginLeft="10dp"
            android:layout_width="309dp"
            android:textColor="#FFFF00"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:inputType="phone"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/pwd"
            />
        <EditText
            android:id="@+id/et_pwd"
            android:layout_marginLeft="10dp"
            android:layout_width="309dp"
            android:textColor="#FFFF00"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:inputType="phone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@android:color/transparent"
            android:text="提交"/>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="注 册 即 表 示 接 受 本 应 用 使 用 协 议"/>
    </LinearLayout>

</LinearLayout>